{
  "name": "malmanhae",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "dev-api": "turbo run dev --filter=api",
    "dev-web": "turbo run dev --filter=web",
    "infra": "docker compose -f infra/docker-compose-infra.yaml up -d",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "storybook": "pnpm --filter web storybook",
    "prepare": "node -e \"if (!process.env.CI) require('husky').install()\"",
    "api:migration:create": "pnpm --filter api migration:create",
    "api:migration:generate": "pnpm --filter api migration:generate",
    "api:migration:run": "pnpm --filter api migration:run"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "turbo": "^2.7.1",
    "typescript": "5.9.2"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "turbo run lint -- --fix"
    ]
  },
  "packageManager": "pnpm@10.24.0",
  "pnpm": {
    "overrides": {
      "@types/react": "^19",
      "@types/react-dom": "^19"
    }
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "tailwindcss-animate": "^1.0.7"
  }
}
